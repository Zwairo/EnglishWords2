<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGameMode"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/bg_mode_card">

        <!-- ICON -->
        <TextView
            android:id="@+id/txtIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“˜"
            android:textSize="32sp"/>

        <!-- TITLE -->

        <!-- SUBTITLE -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtIcon"
            android:layout_marginTop="5dp"
            android:text="GENEL"
            android:textColor="#2C2C2C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle"
            android:text="KarÄ±ÅŸÄ±k kelimeler"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <!-- LOCK OVERLAY -->
        <LinearLayout
            android:id="@+id/lockLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#07D59E9E"
            android:visibility="gone">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/lock"/>

            <TextView
                android:id="@+id/txtCoinNeed"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
